= render partial: 'dashboard/navbar', locals: { school: @school, render_ux_guidelines: true, applications_badge: @applications }


.row
  table.table.table-hover.table-rg2a.table-sticky-thead
    - cols = ["Classe",
        "Inscrits/Valid√©s",
        "Sans candidature",
        "Sans stage"]
    thead
      tr.tr-white
        - cols.map.with_index do |col, i|
          th class="align-top #{i.zero? ? '' : 'text-center'}"
            small= col
    tbody= render partial: "class_rooms/class_room", collection: Array(@school.class_rooms.order(:name)), locals: { school: @school, cols: cols }

  - if can?(:create, ClassRoom)
    .col-12
      = link_to "Ajouter une classe", new_dashboard_school_class_room_path(@school), class: 'text-danger font-weight-bold'
