<tr>
  <td><%= Presenters::User.new(user: school_employee).short_name %></td>
  <td><%= school_employee.try(:class_room).try(:name) %></td>
  <td><%= Presenters::User.new(user: school_employee).role_name %></td>
  <td>
    <% if can?(:delete, school_employee) %>
      <%= link_to dashboard_school_user_path(school_employee.school, school_employee), method: :delete do %>
        <i class="fas fa-trash"></i>&nbsp;Supprimer
      <% end %>
    <% end %>
  </td>
</tr>
