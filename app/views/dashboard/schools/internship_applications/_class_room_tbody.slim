.row.mt-4
  .col-12
    h5= class_room[:name]

.row.internship-agreement-to-sign
  .col-12.px-0
    table.table.table-hover.table-sticky-thead
      thead
        tr.d-flex.tr-white
          th.col-2.small.muted Elève
          th.col-4.small.muted Offre de stage
          th.col-2.small.muted Organisme d'accueil
          th.col-2.small.muted.text-center Complété par
          th.col-2.small.muted
      tbody class="class-room-#{class_room[:id]}"
        - applications.each do |application|
          = render partial: 'dashboard/internship_applications/internship_application',
                   locals: { internship_application: application}
