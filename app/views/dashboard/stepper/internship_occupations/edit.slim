- url = dashboard_stepper_internship_occupation_path(id: @internship_occupation.id,
                                                     entreprise_id: params[:entreprise_id],
                                                     planning_id: params[:planning_id])
= render 'layouts/breadcrumb',
          links: [ [dashboard_internship_offers_path, 'Mes offres de stage'],
                   ['', 'Publier une offre de stage']]
.row
  .col-12
      h1.h2.mb-3 Publier une offre de stage

.row
  .col-12
    = form_with model: @internship_occupation,
                data: { turbo: false },
                method: :patch,
                url: url do |form|
      = render "dashboard/stepper/steps",
               current_step_number: 1,
               total_steps: 3,
               current_step_title: "MÃ©tier et localisation",
               next_step_title: "Votre entreprise"
      = render "layouts/form_errors",
               resource: @internship_occupation,
               resource_name: :internship_offer
      = render 'dashboard/stepper/internship_occupations/form_fields',
               { resource: @internship_occupation, form: form, submit_button: true, warning_block: true }
