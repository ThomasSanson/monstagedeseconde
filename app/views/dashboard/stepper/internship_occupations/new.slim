= render 'layouts/breadcrumb',
          links: [ [dashboard_internship_offers_path, 'Mes offres de stage'],
                   ['', 'Déposer une offre de stage']]
.row
  .col
    h1.h2.mb-3 Déposer une offre de stage

= form_with model: @internship_occupation,
            url: dashboard_stepper_internship_occupations_path(@internship_occupation),
            method: :post,
            data: { turbo: false } do |form|

  = render "dashboard/stepper/steps",
            current_step_number: 1,
            total_steps: 3,
            current_step_title: "Métier et localisation",
            next_step_title: "Votre entreprise"

  = render "layouts/form_errors",
           resource: @internship_occupation,
           resource_name: :internship_offer

  = render 'dashboard/stepper/internship_occupations/form_fields',
            resource: @internship_occupation,
            warning_block: true,
            form: form,
            submit_button: true
