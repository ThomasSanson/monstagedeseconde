  ul.nav.nav-banner.float-xs-none.float-sm-right
    - if user_signed_in?
      - unless current_user.is_a?(Users::Employer)
        li.nav-item
          = link_to 'Recherche', internship_offers_path, class: "nav-link pl-1 pr-1 py-4 #{current_page?(internship_offers_path) || current_controller?(:internship_offers) ? 'active' : ''}"
      li.nav-item
        = link_to current_user.dashboard_name, current_user.custom_dashboard_path, class: "nav-link pl-1 pr-1 py-4  #{current_page?(dashboard_students_internship_applications_path(current_user)) || current_controller?(:internship_applications) ? 'active' : ''}"
      li.nav-item
        = link_to "Mon profil", account_path, class: "nav-link pl-1 pr-1 py-4 #{current_page?(account_path) || current_page?(account_path(section: :resume)) || current_page?(account_path(section: :identity)) || current_page?(account_path(section: :school)) ? 'active' : ''}"
    - else
      li.nav-item.d-none.d-sm-block
        = link_to 'Cr√©er mon compte', new_user_registration_path, class: "btn btn-warning mr-2 my-3 #{current_controller?(:registrations) ? 'active' : ''}"
      li.nav-item.d-none.d-sm-block
        = link_to 'Me connecter', new_user_session_path, class: "btn btn-outline-warning ml-2 my-3 #{current_controller?(:sessions) ? 'active' : ''}"

      li.nav-item.d-block.d-sm-none
        = link_to 'Inscription', new_user_registration_path, class: "nav-link pl-1 pr-1 py-4 #{current_controller?(:registrations) ? 'active' : ''}"
      li.nav-item.d-block.d-sm-none
