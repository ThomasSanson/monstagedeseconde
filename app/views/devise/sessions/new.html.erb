<header class="header-account">
  <h1 class="h2 text-center text-sm-left mb-0">Me connecter</h1>
  <p class="text-center text-sm-left mb-0"><%= link_to "Pas encore de compte&nbsp;?".html_safe, users_choose_profile_path %></p>
</header>
<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
  <%= f.rg2a_explain_required_asterisk %>
  <%= render "devise/shared/error_messages", resource: resource %>

  <div class="form-group">
    <%= f.label :email do %>
      Adresse électronique
      <%= f.rg2a_required_content_tag %>
    <% end %>
    <%= f.email_field :email, autofocus: true, autocomplete: "email", class: 'form-control col-lg-6', required: true %>
  </div>

  <div class="form-group">
    <%= f.label :password do %>
      Mot de passe
      <%= f.rg2a_required_content_tag %>
    <% end %>
    <%= f.password_field :password, autocomplete: "current-password", class: 'form-control  col-lg-6', required: true %>
    <%- if devise_mapping.recoverable? && controller_name != 'passwords' && controller_name != 'registrations' %>
      <%= link_to t("devise.passwords.new.forgot_your_password"), new_password_path(resource_name), class: 'form-text text-muted small' %>
    <% end %>
  </div>

  <% if devise_mapping.rememberable? %>
    <div class="form-group form-check">
      <%= f.check_box :remember_me, class: 'form-check-input' %>
      <%= f.label :remember_me, class: 'form-check-label' %>
    </div>
  <% end %>

  <div class="actions d-flex d-sm-block">
    <%= f.submit t('.sign_in'), class: 'btn btn-primary' %>
  </div>
<% end %>
<%= link_to "Vous n'avez pas reçu le message de confirmation&nbsp;?".html_safe, new_confirmation_path(resource_name), class: "small" %>
