<header class="header-account">
  <h2 class="text-center text-sm-left mb-0"><%= t('.forgot_your_password') %></h2>
</header>
<%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
  <%= f.rg2a_explain_required_asterisk %>
  <%= render "devise/shared/error_messages", resource: resource %>

  <div class="form-group">
    <%= f.label :email do %>
      Adresse Ã©lectronique
      <%= f.rg2a_required_content_tag %>
    <% end %>
    <%= f.email_field :email, autofocus: true, autocomplete: "email", class: 'form-control col-lg-6', required: true %>
  </div>

  <div class="actions d-flex d-sm-block">
    <%= f.submit t('.send_me_reset_password_instructions'), class: 'btn btn-primary' %>
  </div>
<% end %>

<%= render "devise/shared/links" %>
