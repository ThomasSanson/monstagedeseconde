<header class="header-account">
  <h1 class="h2 text-center text-sm-left mb-0"><%= t('.resend_confirmation_instructions') %></h2>
</header>
<%= form_for(resource, as: resource_name, url: confirmation_path(resource_name), html: { method: :post }) do |f| %>
  <%= f.rg2a_explain_required_asterisk %>
  <%= render "devise/shared/error_messages", resource: resource %>

  <div class="form-group">
    <%= f.label :email do %>
      Adresse Ã©lectronique
      <%= f.rg2a_required_content_tag %>
    <% end %>
    <%= f.email_field :email, autofocus: true, autocomplete: "email", value: (resource.pending_reconfirmation? ? resource.unconfirmed_email : resource.email), class: 'form-control col-lg-6', required: true %>
  </div>

  <div class="actions d-flex d-sm-block">
    <%= f.submit t('.resend_confirmation_instructions'), class: 'btn btn-primary' %>
  </div>
<% end %>

<%= render "devise/shared/links" %>
