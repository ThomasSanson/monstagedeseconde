<h2><%= t('devise.registrations.new.sign_up') %></h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>

  <div class="form-group">
    <%= f.label :type, 'Profil', class: 'required' %>
    <%= f.select :type, options_for_select(user_types), {}, autofocus: true, class: 'custom-select' %>
  </div>

  <div class="form-group">
    <%= f.label :first_name, class: 'required' %>
    <%= f.text_field :first_name, class: 'form-control', required: true %>
  </div>

  <div class="form-group">
    <%= f.label :last_name, class: 'required'  %>
    <%= f.text_field :last_name, class: 'form-control', required: true %>
  </div>

  <div class="form-group">
    <%= f.label :email, class: 'required' %>
    <%= f.email_field :email, class: 'form-control', required: true %>
  </div>

  <div class="form-group">
    <%= f.label :password, class: 'required' %>
    <% if @minimum_password_length %>
    <em><%= t('devise.shared.minimum_password_length', count: @minimum_password_length) %></em>
    <% end %>
    <%= f.password_field :password, autocomplete: "new-password", class: 'form-control', required: true %>
  </div>

  <div class="form-group">
    <%= f.label :password_confirmation, class: 'required' %>
    <%= f.password_field :password_confirmation, autocomplete: "new-password", class: 'form-control', required: true %>
  </div>

  <div class="actions">
    <%= f.submit t('devise.registrations.new.sign_up'), class: 'btn btn-primary' %>
  </div>
<% end %>

<%= render "devise/shared/links" %>
